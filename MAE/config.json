{
    "name": "tmp",
    "n_gpu": 1,
    "seed" : 42,
    "arch": {
        "type": "MAE",
        "args": {
            "image_size" : 224,
            "patch_size" : 16,
            "mask_ratio" : 0.75,
            "encoder_type" : "ViT-S",
            "dropout" : 0.5
        }
    },
    "data_loader": {
        "type": "ImageNetDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
