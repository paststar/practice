{
    "name": "tmp",
    "n_gpu": 1,
    "seed" : 42,
    "arch": {
        "type": "MAE",
        "args": {
            "image_size" : 224,
            "patch_size" : 16,
            "mask_ratio" : 0.75,
            "encoder_type" : "ViT-B",
            "dropout" : 0.5
        }
    },
    "data_loader": {
        "_comment": "논문에선 4096 배치사이즈 사용",
        "type": "ImageNetDataLoader",
        "args":{
            "data_dir": "/root/data/",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.00015,
            "weight_decay": 0.05,
            "betas" : [0.9, 0.95]
        }
    },
    "lr_scheduler": {
        "_comment": "논문에선 warmup_steps 40만 명시",
        "type": "CosineAnnealingWarmupRestarts",
        "args": {
            "first_cycle_steps": 100,
            "cycle_mult": 1.0,
            "max_lr": 0.01,
            "min_lr": 0.000001,
            "warmup_steps": 40,
            "gamma": 0.5
        }
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
